<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active">Bill</li>
</ol>

<%= link_to 'New Bill', new_bill_path, class: 'btn btn-success pull-right' %>

<h2>Bills</h2>

<table class="table table-bordered table-striped">
  <thead>
    <th>Utility name</th>
    <th>Amount</th>
    <th>Due on</th>
  </thead>
  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.utility.name %></td>
        <td>$<%= bill.amount %></td>
        <td>
          <%= bill.due_on %>
          <span class="pull-right">
            <% if policy(bill).show? %>
              <%= link_to 'Show', bill_path(bill),
                class: 'btn btn-default btn-xs' %>
            <% end %>
            <% if policy(bill).edit? %>
              <%= link_to 'Edit', edit_bill_path(bill),
                class: 'btn btn-default btn-xs' %>
            <% end %>
            <% if policy(bill).destroy? %>
              <%= link_to 'Delete', bill_path(bill),
                method: :delete,
                class: 'btn btn-danger btn-xs',
                data: { confirm: "Are you sure you want to delete this bill?" } %>
            <% end %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>