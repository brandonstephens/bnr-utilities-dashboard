<%= form_for bill do |f| %>

  <fieldset class="form-group">
    <%= f.label :utility %>
    <%= f.collection_select :utility_id, utilities, :id, :name, {},
      class: 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, min: 0.01, step: 0.01, 
      class: 'form-control' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.label :due_on %>
    <%= f.date_field :due_on, class: 'form-control' %>
  </fieldset>

  <%= f.submit 'Submit', class: 'btn btn-primary' %>

<% end %>