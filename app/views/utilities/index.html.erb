<ol class="breadcrumb">
  <li><%= link_to 'Home', root_path %></li>
  <li class="active">Utilities</li>
</ol>

<%= link_to 'New Utility', new_utility_path, class: 'btn btn-success pull-right' %>

<h1>Utilities</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
  </tr>
  <tbody>
    <% @utilities.each do |utility| %>
      <tr>
        <td>
          <%= link_to utility.name, utility_path(utility) %>
        
          <span class="pull-right">
            <% if policy(utility).show? %>
              <%= link_to 'Show', utility_path(utility), 
                class: 'btn btn-default btn-xs' %>
            <% end %>
            <% if policy(utility).edit? %>
              <%= link_to 'Edit', edit_utility_path(utility), 
                class: 'btn btn-default btn-xs' %>
            <% end %>
            <%= link_to 'Share', utility_privileges_path(utility),
              class: 'btn btn-default btn-xs' %>
            <% if policy(utility).destroy? %>
              <%= link_to 'Delete', utility_path(utility), 
                method: :delete,
                class: 'btn btn-danger btn-xs',
                data: { confirm: "Are you sure you want to delete #{utility.name}?"} %>
            <% end %>
          </span>
        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>